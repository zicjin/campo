- tabIndex ||= nil
= form.text_area name, id: 'editor', data: { behaviors: 'autosize' }, tabIndex: tabIndex, autofocus:""

= content_for :script
  javascript:
    window.glo_editor = new Simditor({
      textarea: $('#editor'),
      placeholder: "文明发言……",
      toolbar: (window.glo_touchDevice? ['image', 'link', 'title', 'bold', 'blockquote']: ['image', 'video', 'link', 'title', 'bold', 'italic', 'underline', 'ol', 'ul', 'blockquote', 'table', 'hr']),
      upload: {
        url: '/attachments'
      },
      pasteImage: true,
      defaultImage: '#{ image_url "image.png" }'
    });